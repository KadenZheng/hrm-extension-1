{
  "manifest_version": 3,
  "name": "Signal Viewer Extension",
  "version": "1.0",
  "description": "Chrome extension to interact with Signal Viewer API",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
